{
  "name": "jazz-richtext-tiptap",
  "version": "0.1.5",
  "description": "Tiptap integration for Jazz rich text editing",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "scripts": {
    "build": "rm -rf ./dist && tsc --sourceMap --outDir dist",
    "dev": "tsc --watch --sourceMap --outDir dist",
    "test": "vitest --run --root ../../ --project jazz-richtext-tiptap",
    "test:watch": "vitest --watch --root ../../ --project jazz-richtext-tiptap",
    "format-and-lint": "biome check .",
    "format-and-lint:fix": "biome check . --write"
  },
  "keywords": [],
  "author": "Garden Computing, Inc.",
  "license": "MIT",
  "dependencies": {
    "@tiptap/core": "^2.12.0",
    "jazz-browser": "workspace:*",
    "jazz-richtext-prosemirror": "workspace:*",
    "jazz-tools": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
