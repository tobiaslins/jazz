{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "build:generate-docs"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": ["GRAFANA_SERVICE_ACCOUNT"]
    },
    "build:generate-docs": {
      "inputs": ["../../../packages/*/src/**"],
      "outputs": ["typedoc/**", "public/llms.txt", "public/llms-full.txt"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    }
  }
}
